<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.davelkan.mapv2.util.NodeInfoFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gather Intel"
        android:id="@+id/gather_intel_button"
        android:visibility="invisible"
        android:layout_gravity="left|top" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decrypt Message"
        android:id="@+id/decrypt_intel_button"
        android:visibility="invisible"
        android:layout_gravity="left|top" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deliver Intel"
        android:id="@+id/deliver_intel_button"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal|top" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="64dp"
        android:text=""
        android:id="@+id/about"
        android:visibility="invisible"
        android:layout_gravity="right|top" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/nodeStats"
        android:visibility="invisible"
        android:background="@color/material_blue_grey_800"
        android:layout_gravity="left|bottom" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/ownerBar"
        android:layout_gravity="center_horizontal|bottom"
        android:visibility="invisible"
        android:layout_marginBottom="10dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/node_selector"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:visibility="invisible"
        android:layout_marginTop="70dp" />

</FrameLayout>
